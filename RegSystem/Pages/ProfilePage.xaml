<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:RegSystem.ViewModels"
             x:Class="RegSystem.Pages.ProfilePage"
             Title="ข้อมูลนักศึกษา">

    <ContentPage.BindingContext>
        <viewmodel:ProfilePageViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20">
        <!-- แบ่งเป็น 2 คอลัมน์ -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- คอลัมน์ซ้าย: รูปภาพ, ชื่อ, ปุ่ม Logout -->
        <VerticalStackLayout Grid.Column="0"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- รูปโปรไฟล์ -->
            <Border StrokeShape="RoundRectangle 100"
                    StrokeThickness="2"
                    BackgroundColor="Transparent"
                    Padding="0"
                    Margin="0,0,0,20">
                <Image Source="{Binding ProfileImage}"
                       WidthRequest="150"
                       HeightRequest="150"
                       Aspect="AspectFill"/>
            </Border>

            <!-- ชื่อผู้ใช้ -->
            <Label Text="{Binding FullName}"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="{Binding Email}"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,5,0,10"/>
                   
            <Label Text="{Binding StudentId}"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,10"/>
                   
            <Label Text="{Binding Department}"
                   FontSize="16"
                   HorizontalOptions="Center" />
                   
            <Label Text="{Binding Faculty}"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>
                   
            <Label Text="{Binding Year}"
                   FontSize="16"
                   HorizontalOptions="Center" />
                   
            <Label Text="{Binding Gpax}"
                   FontSize="16"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,10"/>
                   
            <Label Text="{Binding Status}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Green"
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20"/>

            <!-- ปุ่ม Logout -->
            <Button Text="Logout"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    Clicked="OnLogoutClicked"/>
        </VerticalStackLayout>

        <!-- คอลัมน์ขวา: หัวข้อ "วิชาที่ลงทะเบียน" -->
        <VerticalStackLayout Grid.Column="1"
                             Padding="20"
                             VerticalOptions="Start">
            <Label Text="วิชาที่ลงทะเบียน"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   Margin="0,10,0,0"/>
                   
            <!-- ต่อไปนี้คุณสามารถเพิ่ม CollectionView สำหรับแสดงรายวิชาได้ -->
        </VerticalStackLayout>
    </Grid>

</ContentPage>