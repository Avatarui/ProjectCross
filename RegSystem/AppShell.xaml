<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RegSystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RegSystem"
    Shell.FlyoutBehavior="Flyout"
    Title="RegSystem">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:Pages.LoginPage}"
        Route="LoginPage"/>

    <!-- กำหนดหน้า ProfilePage -->
    <ShellContent
        Title="Profile Page"
        ContentTemplate="{DataTemplate local:Pages.ProfilePage}"
        Route="ProfilePage"/>

</Shell>
